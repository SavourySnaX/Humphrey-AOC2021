{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "Compile Humphrey",
            "windows": {
                "command": "C:\\work\\humphrey\\humphrey\\bin\\Debug\\net5.0\\Humphrey.exe"
            },
            "command": "/home/snax/Work/Humphrey/Humphrey/bin/Debug/net5.0/Humphrey",
            "args": [
                "--optimisations=false",
                "--debugInfo=true",
                "--pic=true",
                "--output=.out/aoc.o",
                "src/humphreyFiles/main.humphrey"
            ],
            "problemMatcher": {
                "owner": "humphrey",
                "fileLocation": "relative",
                "pattern": [
                    {
                        "regexp": "^Error\\s\\[E.*\\]:\\s(.*)$",
                        "message": 1
                    },
                    {
                        "regexp": "^\\s*-->\\s\"(.*)\"@(.*):(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3
                    }
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "process",
            "label": "Link",
            "command": "clang",
            "windows":{
                "args": [
                    ".out/aoc.o",
                    "src/cFiles/helpers.c",
                    "-g",
                    "-O0",
                    "-Wall",
                    "-std=c11",
                    "--output=.out/aoc"
                ]
            },
            "linux":{
                "args": [
                    ".out/aoc.o",
                    "src/cFiles/helpers.c",
                    "-g",
                    "-O0",
                    "-fpic",
                    "-Wall",
                    "-std=c11",
                    "--output=.out/aoc"
                ]
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn":["Compile Humphrey"],
        }
    ]
}